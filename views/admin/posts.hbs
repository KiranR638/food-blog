<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Art.Design Blog</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Font awesome icon -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" integrity="sha512-+4zCK9k+qNFUR5X+cKL9EIR+ZOhtIloNl9GIKS57V1MyNsYpYcUrUeQc9vNfzsWfV28IaLL3i96P9sdNyeRssA==" crossorigin="anonymous" />
    <link rel="stylesheet" href="../admin_posts.css">
  </head>
  <body>

    <!-- header -->
    <header>
      <nav class = "navbar">
        <div class = "container">
          <a href = "/admin/posts" class = "navbar-brand">BLOG</a>
          <div class = "navbar-nav">
            <a href = "/admin/posts">home</a>
            <a href = "/admin/add_post">Post</a>
            <a href = "/register">Add user</a>
            <a href = "/logout">Logout</a>
          </div>
        </div>
      </nav>
    </header>
    <!-- end of header -->

    <section class = "design" id = "design">
      <div class = "container">
        <div class = "title">
          <h2>Admin</h2>
          <p>Recent post</p>
        </div>

        <div class = "design-content">
          <!-- item -->
          {{#each posts}}
          <div class = "design-item">
            <div class = "design-img">
              <img src = "../images/{{this.post_image}}" alt = "Post image">
            </div>
            <div class = "design-title">
              <a href = "/admin/post_details?post_id={{this._id}}">{{this.title}}</a>
            </div>
          </div>
          {{/each}}
          <!-- end of item -->
          
        </div>
      </div>
    </section>
   
    <footer>
      
    </footer>
    <!-- end of footer -->
    
    
  </body>
</html>